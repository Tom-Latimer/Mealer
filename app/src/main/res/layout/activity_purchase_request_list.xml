<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseRequestList">

    <TextView
        android:id="@+id/txtClientName2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:text="Client Name:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMealName2" />

    <TextView
        android:id="@+id/txtPickUpTime2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="Pick Up Time:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtClientName2" />

    <TextView
        android:id="@+id/txtMealName"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtMealName2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMealName2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Meal Name:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtClientName"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtClientName2"
        app:layout_constraintTop_toBottomOf="@+id/txtMealName" />

    <TextView
        android:id="@+id/txtPickUpTime"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtPickUpTime2"
        app:layout_constraintTop_toBottomOf="@id/txtClientName" />

    <TextView
        android:id="@+id/txtStatus2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:text="Status:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPickUpTime2" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/txtPickUpTime2"
        app:layout_constraintTop_toBottomOf="@+id/txtPickUpTime" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApprove"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/button_blue"
        android:text="Approve"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMealName"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReject"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/button_blue"
        android:text="Reject"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtPickUpTime"
        app:layout_constraintTop_toBottomOf="@+id/btnApprove"
        app:layout_constraintVertical_bias="0.120000005" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>